      }, {
        type: 'text',
        name: 'building_type',
        title: '建筑类型'
      }
    ];
    formContainer.html();
    let htmlStr = '';
    formInputs.forEach((item, index) => {
      htmlStr +=
        `
       <div class="form-group">
          <label for="id${index}" class="col-sm-2 control-label">${item.title}</label>
          <div class="col-sm-10">
            <input type="${item.type}" name="${item.name}" class="form-control" id="id${index}" placeholder="请输入数据...">
          </div>
        </div>
      `
    });
    htmlStr +=
      `<div class="form-group">
          <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" class="btn btn-primary">提交</button>
            <button type="button" id="btn_cancel" class="btn btn-danger">取消</button>
